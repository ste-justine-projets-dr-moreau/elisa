@using GridMvc.Html
@using Clinic.BackEnd.Models
@model IEnumerable<Clinic.BackEnd.Models.FamilyRole>

<!DOCTYPE html>
<html>
<body>

    @section header {
        <h1>@Html.Label(Languages.Global.FamilyRole)</h1>
    }

    <div id="divList">
        @Html.Partial("_List", Model)
    </div>

    <div id="divAddEdit" title=@Languages.Global.AddEdit class="row" style="width:1280px;">
        <div class="col-lg-12">
            @*<div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">*@
            <div class="row">
                <div class="col-lg-4">
                    <label>@Languages.Global.English</label>
                </div>
                <div class="col-lg-8">
                    <input type="text" id="txtName" class="form-control" placeholder="@Languages.Global.English" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-4">
                    <label>@Languages.Global.French</label>
                </div>
                <div class="col-lg-8">
                    <input type="text" id="txtNameFr" class="form-control" placeholder="@Languages.Global.French" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-4">
                    <label>@Html.LabelFor(model => model.First().IsActive)</label>
                </div>
                <div class="col-lg-8">
                    <select id="ddlIsActive" class="form-control">
                        <option value="1">Yes</option>
                        <option value="2">No</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="btn-toolbar pull-right">
                    <input type="button" id="btnCancel" value=@Languages.Global.Cancel class="btn btn-danger" />
                    <input type="button" id="btnSave" value=@Languages.Global.Save class="btn btn-success" />

                </div>
            </div>

        </div>
        @*</div>
            </div>*@

    </div>

    <script>
    $(function () {
        var globalId = 0;

        $("#divAddEdit").dialog({
            autoOpen: false,
            show: {
                effect: "blind",
                duration: 1000
            },
            hide: {
                effect: "explode",
                duration: 1000
            },
            width: 'auto',
            height: 'auto',
            position: {
                my: 'center',
                at: 'center',
                of: window 
            }
                
            });

        $(document).on('click', '.add', function () {
            globalId = 0;
            $('#txtName').val('');
            $('#txtNameFr').val('');
            $('#ddlIsActive').val('1');
            $("#divAddEdit").dialog("open");
        });

        $(document).on('click', '.edit', function () {            
            globalId = $(this).attr('id');
            $.ajax({
                url: '@Url.Action("Get","FamilyRole")',
                type: 'POST',
                data: JSON.stringify({ 'id': globalId }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#txtName').val(data.Name);
                    $('#txtNameFr').val(data.NameFr);
                    data.IsActive == '1' ? $('#ddlIsActive').val('1') : $('#ddlIsActive').val('2');
                },
                error: function () {
                    alert("error");
                }
            });
            $("#divAddEdit").dialog("open");
        });

        $(document).on('click', '.delete', function () {

            if (confirm("@Languages.Global.ConfirmDelete"))
            {
                globalId = $(this).attr('id');
                $.ajax({
                    url: '@Url.Action("Delete","FamilyRole")',
                    type: 'POST',
                    data: JSON.stringify({ 'id': globalId }),
                    dataType: 'html',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        $('#divList').html(data);
                        globalId = 0;
                    },
                    error: function () {
                        alert("error");
                    }
                });
            }
            return false;

        });

        $("#btnSave").click(function () {            
            $.ajax({
                url: '@Url.Action("Save", "FamilyRole")',
                type: 'POST',
                data: JSON.stringify({
                    Id: globalId,
                    Name: $('#txtName').val(),
                    NameFr: $('#txtNameFr').val(),
                    IsActive: $('#ddlIsActive :selected').val() == '1' ? 1 : 0
                }),
                dataType: 'html',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#divList').html(data);
                    globalId = 0;
                },
                error: function () {
                    alert("error");
                }
            });
            $("#divAddEdit").dialog("close");
        });

        $("#btnCancel").click(function () {
            globalId = 0;
            $("#divAddEdit").dialog("close");
        });
    });
    </script>

</body>
</html>
