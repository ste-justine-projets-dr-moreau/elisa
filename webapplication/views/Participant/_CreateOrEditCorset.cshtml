@using Clinic.BackEnd.Models
@model Clinic.BackEnd.Models.Corset

@using (Html.BeginForm())
{
    <div class="modal-dialog " style="margin: 0px" >
        <div class="form-horizontal" style="padding: 0px">

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Participant_Id)
            <div class="modal-body " >
                <div class="form-group">
                    @Html.LabelFor(model => model.CorsetType.Name, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.CorsetType_Id, (IEnumerable<SelectListItem>)ViewBag.CorsetTypes, String.Empty, new { @class = "chosen" })
                        @Html.ValidationMessageFor(model => model.CorsetType_Id)
                    </div>
                </div>
               

                <div class="form-group">
                    @Html.LabelFor(model => model.Start, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Start)
                        @Html.ValidationMessageFor(model => model.Start)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.End, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.End)
                        @Html.ValidationMessageFor(model => model.End)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Comment)
                        @Html.ValidationMessageFor(model => model.Comment)
                    </div>
                </div>

                <div class="form-group">
                    <div class="btn-toolbar pull-right">
                        <input type="button" id="btnCancelCorset" value=@Languages.Global.Cancel class="btn btn-danger" />
                        <input type="button" id="btnSaveCorset" value=@Languages.Global.Save class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(document).ready(function () {
        $(".datePicker").datepicker({
            dateFormat: 'yy-mm-dd',
            changeMonth: true,
            changeYear: true,
            yearRange: "-50:+5"
        });

    });
</script>